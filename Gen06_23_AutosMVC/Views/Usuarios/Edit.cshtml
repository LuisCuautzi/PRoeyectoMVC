@model Gen06_23_AutosMVC.Models.Usuario

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerfilId" class="control-label"></label>
                <select asp-for="PerfilId" class="form-control" asp-items="ViewBag.PerfilId"></select>
                <span asp-validation-for="PerfilId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DomicilioId" class="control-label"></label>
                <select asp-for="DomicilioId" class="form-control" asp-items="ViewBag.DomicilioId"></select>
                <span asp-validation-for="DomicilioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatosPersonalesId" class="control-label"></label>
                <select asp-for="DatosPersonalesId" class="form-control" asp-items="ViewBag.DatosPersonalesId"></select>
                <span asp-validation-for="DatosPersonalesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
